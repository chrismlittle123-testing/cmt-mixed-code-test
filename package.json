{
  "name": "cmt-mixed-code-test",
  "version": "1.0.0",
  "description": "Test project for check-my-toolkit CODE domain features in mixed TypeScript + Python projects",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/typescript/**/*.ts",
    "lint:fix": "eslint src/typescript/**/*.ts --fix",
    "format": "prettier --write \"src/typescript/**/*.ts\"",
    "format:check": "prettier --check \"src/typescript/**/*.ts\"",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage --coverage.reporter=json",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.0.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
